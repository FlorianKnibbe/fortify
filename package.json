{
  "name": "fortify-landing",
  "version": "1.0.0",
  "description": "Fortify enables web applications to use smart cards, local certificate stores and do certificate enrollment.",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "deploy": "gh-pages -d dist",
    "start": "npm run clean && parcel src/index.html --port 3000",
    "build": "npm run clean && parcel build src/index.html"
  },
  "author": "https://github.com/PeculiarVentures",
  "license": "MIT",
  "devDependencies": {
    "gh-pages": "^2.2.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.2.2",
    "rimraf": "^3.0.0",
    "sass": "^1.25.0"
  },
  "staticFiles": {
    "staticPath": [
      {
        "staticPath": "src/static",
        "staticOutDir": "/"
      },
      {
        "staticPath": "src/media",
        "staticOutDir": "/media"
      },
      {
        "staticPath": "src/img",
        "staticOutDir": "/img"
      }
    ]
  }
}
