{
    "extends": "standard",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": ["error", "always"],
        "comma-dangle": ["error", "always-multiline"],
        "no-cond-assign": 0,
        "space-before-function-paren": 0,
        "padded-blocks": 0
    }
}